@namespace Microsoft.Fast.Components.FluentUI
@inherits FluentInputBase<string?>
<CascadingValue TValue="FluentRadioContext" Value="_context" IsFixed=true>
    <fluent-radio-group @ref=Element
                        class="@Class"
                        style="@Style"
                        readonly=@Readonly
                        disabled=@Disabled
                        name="@_context!.GroupName"
                        value="@BindConverter.FormatValue(Value?.ToString())"
                        orientation="@Orientation.ToAttributeValue()"
                        required="@Required"
                        @onuserchange="@((e) => CurrentValueAsString = e.Value?.ToString())"
                        @attributes="AdditionalAttributes">
        @ChildContent
    </fluent-radio-group>
</CascadingValue>

